# admin 独立配置（与业务进程完全分离）

# Admin 自己连接数据库（可与业务库相同 DSN，也可不同）
ADMIN_DB_DSN="user:pass@tcp(127.0.0.1:3306)/lingxingipass?parseTime=true&charset=utf8mb4&loc=UTC"

# Admin HTTP（页面 + API）
ADMIN_HTTP_ENABLE="true"
ADMIN_HTTP_ADDR=":8081"

# Admin 登录密码（用于 /admin/ui/login 与 /admin/* API）
ADMIN_PASSWORD="change-me-admin"

# 业务进程 ops 服务地址（admin 触发任务时会调用它）
# - 本机直跑（两个进程都在宿主机）：http://127.0.0.1:8085
# - Docker Compose（admin 在容器内，通过服务名访问业务容器）：http://ipass:8085
ADMIN_OPS_BASE_URL="http://127.0.0.1:8085"
# 调用 ops 需要的密码（请求头 X-Ops-Password）
ADMIN_OPS_PASSWORD="change-me-ops"
